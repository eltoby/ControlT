@model ControlT.Mvc.Models.CajaModel

@{
    ViewBag.Title = "Nueva Caja";
}
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Caja</h3>
    </div>
    @using (Html.BeginForm("Create", "Cajas", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="modal-body">
            <div class="form-group">
                <div class="col-xs-3">
                    <label for="Nombre" class="control-label">Nombre:</label>
                </div>
                <div class="col-xs-3">
                    @Html.TextBoxFor(x => x.Nombre, new { @class = "col-xs-12 form-control" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true" value="Cancelar">Cancelar</button>
            <button class="btn btn-primary" type="submit" value="Guardar">Guardar</button>
        </div>
    }
</div>