@model ControlT.Mvc.Models.NuevoMovimientoModel

@{
    ViewBag.Title = "Nuevo Movimiento";
}
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Movimiento</h3>
    </div>
    @using (Html.BeginForm("Create", "Movimientos", FormMethod.Post, new {@class = "form-horizontal"}))
    {
        <div class="modal-body">
            <div class="form-group">
                <div class="col-xs-3">
                    <label for="Fecha" class="control-label">Fecha:</label>
                </div>
                <div class="col-xs-3">
                    @Html.TextBoxFor(x => x.Fecha, new { @class = "col-xs-12 form-control"})                    
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-3">
                    <label for="CajaID" class="control-label">Caja:</label>
                </div>
                <div class="col-xs-9">
                    @Html.DropDownListFor(x => x.CajaID, (IEnumerable<SelectListItem>) ViewBag.Cajas, new { @class = "col-xs-12 form-control"})
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-3">
                    <label for="Importe" class="control-label">Importe:</label>
                </div>
                <div class="col-xs-9">
                    <div class="row">
                        <div class="col-xs-6">
                            @Html.TextBoxFor(x => x.Importe, new { @class = "text-right form-control" })
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-xs-6">
                            @Html.RadioButtonFor(x => x.TipoMovimiento, "Ingreso", new { @id = "Ingreso", value = "Ingreso" })
                            <label for="Ingreso" class="control-label">Ingreso</label>
                        </div>
                        <div class="col-xs-6">
                            @Html.RadioButtonFor(x => x.TipoMovimiento, "Egreso", new { @id = "Egreso", value = "Egreso" })
                            <label for="Egreso" class="control-label">Egreso</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-xs-3">
                    <label for="Concepto" class="control-label">Concepto:</label>
                </div>
                <div class="col-xs-9">
                    @Html.TextBoxFor(x => x.Concepto, null, new { @class = "col-xs-12 form-control" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true" value="Cancelar">Cancelar</button>
            <button class="btn btn-primary" type="submit" value="Guardar">Guardar</button>
        </div>
    }
</div>
<script>
    $(document).ready(function () {
        $("#Fecha").datepicker({ dateFormat: 'dd-mm-yy' });
    });
</script>