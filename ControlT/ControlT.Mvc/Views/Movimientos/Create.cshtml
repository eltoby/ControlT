@model ControlT.Mvc.Models.NuevoMovimientoModel

@{
    ViewBag.Title = "Nuevo Movimiento";
}
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h3 id="myModalLabel">Movimiento</h3>
    </div>
    @using (Html.BeginForm("Create", "Movimientos", FormMethod.Post, new {@class = "modal-form"}))
    {
        <div class="modal-body">
            <div class="col-xs-3">
                @Html.RadioButtonFor(x => x.TipoMovimiento, "Ingreso", false)
                <label for="rbtIngreso">Ingreso</label>
            </div>
            <div class="col-xs-9">
                @Html.RadioButtonFor(x => x.TipoMovimiento, "Egreso", true)
                <label for="rbtEgreso">Egreso</label>
            </div>

            <div class="col-xs-3">
                <label for="fecha">Fecha:</label>
            
            </div>
            <div class="col-xs-9">
                <input id="fecha" />
            </div>

            <div class="col-xs-3">
                <label for="caja">Caja</label>            
            </div>
            <div class="col-xs-9">
                <select><option>Caja1</option></select>
            </div>
            @*Html.DropDownList("Cajas");*@
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true" value="Cancelar">Cancelar</button>
            <button class="btn btn-primary" type="submit" value="Guardar">Guardar</button>
        </div>
    }
</div>
<script>
    $(document).ready( function() {
        $("#fecha").datepicker({ dateFormat: 'dd-mm-yy' });
    })
</script>